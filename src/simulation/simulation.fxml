<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<fx:root fx:id="main" type="javafx.scene.layout.HBox" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8">
    <Pane fx:id="mainPanel" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="900" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
        <children>
            <HBox prefHeight="600.0" prefWidth="900.0">
                <children>
                    <TableView fx:id="simulationTable" prefHeight="400.0" minWidth="-Infinity" prefWidth="400.0">
                    </TableView>
                    <VBox fx:id="statisticsVB" prefWidth="600">
                        <children>
                            <HBox spacing="10.0">
                                <TextField fx:id="simulationDayField" promptText="Día de simulación" />
                                <Button fx:id="simulationDayButton" onAction="#simulationDayButtonClicked" prefWidth="100.0" text="Ver día"/>
                            </HBox>
                            <Label fx:id="title"/>
                            <ListView fx:id="statisticsListView" ></ListView>
                            <ScrollPane fitToHeight="true" fitToWidth="true">
                                <VBox minWidth="800">
                                    <children>
                                        <PieChart fx:id="cantClientsPie"></PieChart>
                                       <BarChart fx:id="avgTimeBar">
                                           <xAxis>
                                               <CategoryAxis side="BOTTOM" />
                                           </xAxis>
                                           <yAxis>
                                               <NumberAxis side="LEFT" />
                                           </yAxis>
                                       </BarChart>
                                        <!--  <BarChart fx:id="serverUseBar"></BarChart>-->
                                    </children>
                                </VBox>
                            </ScrollPane>
                        </children>
                    </VBox>
                </children>
            </HBox>
        </children>
    </Pane>
</fx:root>